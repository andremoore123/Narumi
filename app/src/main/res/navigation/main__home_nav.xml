<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main__home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.id.narumi.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailTripFragment"
            app:destination="@id/detailTripFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.id.narumi.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.id.narumi.ui.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/detailTripFragment"
        android:name="com.id.narumi.ui.detail_trip.DetailTripFragment"
        android:label="fragment_detail_trip"
        tools:layout="@layout/fragment_detail_trip" >
        <argument
            android:name="tripId"
            app:argType="string" />
        <action
            android:id="@+id/action_detailTripFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.id.narumi.ui.checkout.CheckoutFragment"
        android:label="fragment_checkout"
        tools:layout="@layout/fragment_checkout" >
        <argument
            android:name="tripId"
            app:argType="string" />
        <action
            android:id="@+id/action_checkoutFragment_to_historyFragment"
            app:destination="@id/historyFragment"
            app:popUpTo="@id/checkoutFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>